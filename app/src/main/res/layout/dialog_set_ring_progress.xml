<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/background"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:alpha="0.7"
        android:background="@drawable/shape_rectangle_000000_10"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    
    <com.preface.megatron.widget.ArcProgressBar
        android:id="@+id/progress"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginTop="13dp"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_15"
        app:defProgressColor="@color/color_666666"
        app:currProgressColor="@color/white"
        app:defProgressWidth="2dp"
        app:currProgressWidth="3dp"
        app:layout_constraintLeft_toLeftOf="@+id/background"
        app:layout_constraintTop_toTopOf="@+id/background"
        app:layout_constraintRight_toRightOf="@+id/background"/>

    <TextView
        android:id="@+id/tv_setting_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置中..."
        android:textColor="@color/white"
        android:textSize="@dimen/sp_13"
        android:layout_marginBottom="14dp"
        app:layout_constraintLeft_toLeftOf="@+id/background"
        app:layout_constraintRight_toRightOf="@+id/background"
        app:layout_constraintBottom_toBottomOf="@+id/background"/>

</android.support.constraint.ConstraintLayout>